<p id="notice"><%= notice %></p>

<h1>Listing Comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Micropost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment|
        if comment.micropost_id == @micropost.id
    %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.user_id %></td>
        <td><%= comment.micropost_id %></td>
        <td><%= link_to 'Show', micropost_comment_path(comment.micropost_id, comment.id) %></td>
        <td><%= link_to 'Edit', edit_micropost_comment_path(comment.micropost_id, comment.id) %></td>
        <td><%= link_to 'Destroy', micropost_comment_path(comment.micropost_id, comment.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%  end
       end 
    %>
  </tbody>
</table>

<br/>

<%= link_to 'New Comment', new_micropost_comment_path(@micropost.id) %>